{
  "name": "ceci-hook",
  "version": "0.0.0-semantically-released",
  "description": "Hook-style behavior reuse -- in any framework!",
  "scripts": {
    "build": "npm-run-all build:pkg",
    "build:pkg": "pack build",
    "test": "cross-env NODE_ENV=test jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": 8
              }
            }
          ]
        ]
      }
    },
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 8
          },
          "modules": false
        }
      ]
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "func-names": "off",
      "camelcase": "off",
      "valid-jsdoc": "off",
      "prettier/prettier": "error"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.5.0",
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-copy-assets": "^0.4.0",
    "@pika/plugin-standard-pkg": "^0.4.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^7.0.0-beta.2",
    "@semantic-release/git": "^7.1.0-beta.3",
    "@semantic-release/github": "^5.4.0-beta.1",
    "@semantic-release/npm": "^5.2.0-beta.6",
    "babel-jest": "^24.8.0",
    "cross-env": "^5.2.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "react-app-polyfill": "^1.0.1",
    "semantic-release": "^17.2.3",
    "sort-package-json": "^1.22.1"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**"
          ]
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "minNodeVersion": "8"
        }
      ],
      [
        "@pika/plugin-copy-assets"
      ]
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
